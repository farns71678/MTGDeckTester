    <input type="number" name="count" id="context-menu-count-input" class="widget-menu-option" min="0">
    <div class="widget-menu-option" id="right-click-delete">Remove</div>
    <div class="widget-menu-option" id="right-click-sideboard">Add to Sideboard</div>
    <div class="widget-menu-option" id="right-click-remove-sideboard">Remove from Sideboard</div>
  </div>

  <div id="widget-tool-panel-container">
    <div class="widget-tool-tail up"></div>
    <div id="widget-tool-panel" class="widget-tool-tails">
      <div id="widget-tool-deck-load" class="widget-tool-item tooltip-container"><i class="bx bxs-file"></i><span class="tooltip-text right">Load Deck</span></div>
      <div id="widget-tool-stats" class="widget-tool-item tooltip-container"><i class="bx bxs-bar-chart-alt-2"></i><span class="tooltip-text right">Deck Stats</span></div>
      <div id="widget-tool-upload" class="widget-tool-item tooltip-container"><i class="bx bxs-file-import"></i><span class="tooltip-text right">Import Cards</span></div>
      <div id="widget-tool-export" class="widget-tool-item tooltip-container"><i class="bx bxs-file-export"></i><span class="tooltip-text right">Export Deck</span></div>
      <div id="widget-tool-clear" class="widget-tool-item tooltip-container"><i class="bx bxs-trash"></i><span class="tooltip-text right">Clear Cards</span></div>
      <div id="widget-tool-settings" class="widget-tool-item tooltip-container"><i class="bx bxs-cog"></i><span class="tooltip-text right">Settings</span></div>
    </div>  
    <div class="widget-tool-tail down"></div>
  </div>

  <div id="widget-err-container"></div>

  <div id="widget-modal-container" class="hidden">
    <div id="multiple-cards-dialog">
      <h2>Multiple Cards Found</h2>
      <div id="multiple-results-container">
        <div class="card-result">
          <div class="card-result-text">
            <div class="card-result-name">Drakuseth, Maw of Flames</div>
            <div class="card-result-type-line">Legendary Creature - Dragon Avatar</div>
          </div>
          <div class="card-result-cost">
            <span class="card-symbol card-symbol-4">{4}</span>
            <span class="card-symbol card-symbol-R">{R}</span>
            <span class="card-symbol card-symbol-R">{R}</span>
            <span class="card-symbol card-symbol-R">{R}</span>
          </div>
        </div>
      </div>
      <button id="multiple-cards-cancel-btn">Cancel</button>
