<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MTG Deck Builder - Viewer</title>

    <link href="/viewer/styles.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/viewer/app.js" defer></script>
</head>
<body>
    
<div id="widget-container">
  
  <div id="widget-deck-header">
    <form id="widget-form">
      <input type="number" name="count" id="card-count-input" min="1" value="4">
      <input type="text" name="card" id="card-add-input" placeholder="Add Card">
      <button id="card-add-submit" class="widget-icon-btn tooltip-container"><i class="bx bxs-plus-circle"></i><span class="tooltip-text bottom">Add Card</span></button>
      <input type="file" name="file" id="widget-file-upload" accept="text/plain|application/json">
      <input type="file" name="" id="widget-deck-upload" accept="application/json">
      <button id="widget-upload-btn" class="widget-icon-btn tooltip-container"><i class="bx bxs-file-import"></i><span class="tooltip-text bottom">Import Cards</span></button>
      <button id="widget-export-btn" class="widget-icon-btn tooltip-container"><i class="bx bxs-file-export"></i><span class="tooltip-text bottom">Export Deck</span></button>
      <button id="widget-deck-load-btn" class="widget-icon-btn tooltip-container"><i class="bx bxs-file"></i><span class="tooltip-text bottom">Load Deck</span></button>
      <button id="widget-clear-btn" class="widget-icon-btn tooltip-container"><i class="bx bxs-trash-alt"></i><span class="tooltip-text bottom">Clear Cards</span></button>
      <!-- populated by JS -->
      <select name="format" id="widget-deck-format-input"></select>
      <input type="submit" class="hidden" value="">
    </form>
  </div>
  <!--<div id="widget-err-container"></div>
  <div id="widget-form-err"></div>-->
