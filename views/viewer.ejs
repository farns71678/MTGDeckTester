      <div id="widget-name-container">
        <div id="widget-name-input" contenteditable="true" spellcheck="false">Deck</div>
      </div>
      <div id="widget-deck-count-container">
        <span id="widget-deck-count">0</span>/<span id="widget-deck-min-count">60</span>
      </div>
    </div>

    <!--stats section-->
    <div id="widget-stats-container" class="not-visible">
