    <div id="widget-deck-legend">
      <div class="legend-item" style='color: var(--format-err-color)'>
        <span class="legend-color" style='background-color: var(--format-err-color)'></span>
        Card not legal in format
      </div>
    </div>
  </div>

  <div id="widget-right-click" class="hidden">
    <!--<div class="widget-menu-option" id="right-click-count">
      <form id="context-menu-count-form">
